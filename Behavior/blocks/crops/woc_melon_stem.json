                    },
                    "minecraft:selection_box": {
                        "origin": [-1, 0, -1],
                        "size": [4, 8, 4]
                    }
                }
            },

            {
                "condition": "query.block_state('woc:growth_stage') == 4",
                "components": {
                    "minecraft:material_instances": {
                        "*": { "texture": "melon_stage_4", "render_method": "alpha_test" }
                    },
                    "minecraft:selection_box": {
                        "origin": [-1, 0, -1],
                        "size": [4, 9, 4]
                    }
                }
            },

            {
                "condition": "query.block_state('woc:growth_stage') == 5",
                "components": {
                    "minecraft:material_instances": {
                        "*": { "texture": "melon_stage_5", "render_method": "alpha_test" }
                    },
                    "minecraft:selection_box": {
