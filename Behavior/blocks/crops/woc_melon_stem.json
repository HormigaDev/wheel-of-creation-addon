                "components": {
                    "minecraft:geometry": {
                        "identifier": "geometry.woc_stem_crop",
                        "bone_visibility": {
                            "conn_stem": "query.block_state('woc:connected')",
                            "stem": "query.block_state('woc:connected') == false",
                            "conn_n": "query.block_state('woc:conn_n') && query.block_state('woc:connected')",
                            "conn_s": "query.block_state('woc:conn_s') && query.block_state('woc:connected')",
                            "conn_e": "query.block_state('woc:conn_e') && query.block_state('woc:connected')",
                            "conn_w": "query.block_state('woc:conn_w') && query.block_state('woc:connected')"
                        }
                    },
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "melon_connected",
