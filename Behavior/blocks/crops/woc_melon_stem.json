                    "minecraft:selection_box": {
                        "origin": [-1, 0, -1],
                        "size": [4, 12, 4]
                    }
                }
            },

            {
                "condition": "query.block_state('woc:growth_stage') == 7 && query.block_state('woc:connected') == false",
                "components": {
                    "minecraft:material_instances": {
                        "*": { "texture": "melon_stage_7", "render_method": "alpha_test" }
                    },
                    "minecraft:selection_box": {
